{
  "name": "server",
  "version": "0.0.1",
  "author": "Leonid Trofymchuk",
  "license": "MIT",
  "private": false,
  "main": "build/server.js",
  "scripts": {
    "start": "tsc -w & nodemon build/index.js",
    "build": "tsc",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint": "tslint -c tslint.json src/**/*.ts"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "express": "4.17.3",
    "http": "0.0.0",
    "mobx": "5.9.0",
    "onoff": "4.1.1",
    "ws": "6.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.3",
    "@types/supertest": "2.0.7",
    "@types/ws": "6.0.1",
    "jest": "24.5.0",
    "nodemon": "1.18.10",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "typescript": "3.3.3333"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "server"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "testEnvironment": "node"
  }
}
